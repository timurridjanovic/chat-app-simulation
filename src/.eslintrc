{
    "rules": {
        "indent": [
            2,
            "tab",
			{
				"SwitchCase": 1
			}
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
		"no-underscore-dangle": 0,
		"no-mixed-requires": 0
    },
    "plugins": [
        "react",
		"flowtype"
    ],
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jasmine": true,
        "phantomjs": true
    },
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true,
			"modules": true,
			"experimentalObjectRestSpread": true
		},
		"sourceType": "module"
	}
}
